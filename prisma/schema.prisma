generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model User {
    id           String        @id @default(cuid())
    email        String        @unique
    name         String?
    password     String
    createdAt    DateTime      @default(now())
    updatedAt    DateTime      @updatedAt
    firstName    String?
    lastName     String?
    birthDate    String?
    bills        Bill[]
    cards        Card[]
    transactions Transaction[]
}

model Bill {
    id              String   @id @default(cuid())
    name            String
    value           Float
    dueDate         DateTime
    paid            Boolean  @default(false)
    bankName        String
    transactionType String?
    paymentType     String?
    userId          String
    createdAt       DateTime @default(now())
    updatedAt       DateTime @updatedAt
    user            User     @relation(fields: [userId], references: [id])
}

model Card {
    id        String   @id @default(cuid())
    bankName  String
    validity  String
    limit     Float
    userId    String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    user      User     @relation(fields: [userId], references: [id])
}

model Transaction {
    id              String   @id @default(cuid())
    name            String
    value           Float
    transactionType String
    paymentType     String
    bankName        String
    userId          String
    createdAt       DateTime @default(now())
    updatedAt       DateTime @updatedAt
    user            User     @relation(fields: [userId], references: [id])
}
